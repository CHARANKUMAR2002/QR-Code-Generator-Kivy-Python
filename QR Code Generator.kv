<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 20
        spacing: 20


        Label:
            text: "QR Code Generator"
            font_size: 35
        Label:
            text: "________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________"

        Label:
            text: "Enter Your URL Below"
            font_size: 30
        TextInput:
            id: code
            
            foreground_color: (0,0,1,1)
        Label:
            text: "________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________"
        Label:
            text: "Enter File Name"
            font_size: 30
        TextInput:
            id: file
            
            foreground_color: (0,0,1,1)
        Label:
            text: "________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________"
        Button:
            text: "Generate"
            on_press: root.gen()
            